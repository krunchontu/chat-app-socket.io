# Server configuration
PORT=4500
NODE_ENV=development

# Allowed client origin for CORS
# Use '*' for development if needed, but be more specific for production
CLIENT_ORIGIN=http://localhost:3000

# MongoDB Connection String (replace with your MongoDB connection URL)
MONGO_URI=mongodb+srv://username:password@cluster.example.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret (should be a long, random string)
JWT_SECRET=your_super_secret_jwt_key_should_be_long_and_complex

# Monitoring and Logging
# New Relic License Key (for APM)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Chat App Backend
NEW_RELIC_NO_CONFIG_FILE=true
NEW_RELIC_DISTRIBUTED_TRACING_ENABLED=true
NEW_RELIC_LOG_LEVEL=info

# LogDNA for centralized logging
LOGDNA_KEY=your_logdna_ingestion_key

# Debug settings
DEBUG_LOGGING=false
