# MongoDB Atlas Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your_jwt_secret_for_development

# Monitoring and Logging (optional for development)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
LOGDNA_KEY=your_logdna_ingestion_key

# Environment
NODE_ENV=development

# CORS and Client configuration
# In development, this is usually http://localhost:3000
# In production with Render, this should be the full frontend URL like https://chat-app-frontend-hgqg.onrender.com
CLIENT_ORIGIN=http://localhost:3000

# For local development, the following should be left as is
# For production, this is automatically set by Render using the CLIENT_ORIGIN env var
PORT=4500
